// rules_version must be v2 for modern projects
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Разрешаем пользователю читать/писать ТОЛЬКО свой документ
    match /users/{uid} {
      allow read, write: if request.auth != null
                         && request.auth.uid == uid;
    }

    // (опционально) если будут сабколлекции внутри users/{uid}/...
    match /users/{uid}/{document=**} {
      allow read, write: if request.auth != null
                         && request.auth.uid == uid;
    }
  }
}
